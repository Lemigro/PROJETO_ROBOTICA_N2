    {
        "id": "manipulador_mqtt_in",
        "type": "mqtt in",
        "z": "manipulador_flow",
        "name": "Receber Métricas",
        "topic": "robotica_n2/manipulador_planar/metrics",
        "qos": "1",
        "broker": "mqtt_broker",
        "x": 120,
        "y": 100,
        "wires": [["manipulador_parse"]]
    },
    {
        "id": "manipulador_parse",
        "type": "json",
        "z": "manipulador_flow",
        "name": "Parse JSON",
        "property": "payload",
        "action": "",
        "pretty": false,
        "x": 320,
