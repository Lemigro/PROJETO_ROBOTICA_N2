        "wires": [["manipulador_dashboard"]]
    },
    {
        "id": "manipulador_dashboard",
        "type": "function",
        "z": "manipulador_flow",
        "name": "Preparar Dashboard",
        "func": "const metrics = msg.payload.metrics;\nconst timestamp = new Date(msg.payload.timestamp * 1000);\n\n// Preparar dados para gráfico de erro\nconst msgErro = {payload: metrics.erro_medio_posicao, topic: \"erro_medio\"};\n\n// Criar mensagens para os gauges e displays\nreturn [\n    msgErro,\n    {payload: metrics.erro_medio_posicao, topic: \"erro\"},\n    {payload: metrics.tempo_estabilizacao || 0, topic: \"tempo\"},\n    {payload: metrics.energia_total_gasta, topic: \"energia\"},\n    {payload: metrics.overshoot_maximo, topic: \"overshoot\"},\n    {payload: metrics.estabilizado ? \"Sim\" : \"Não\", topic: \"status\"}\n];",
        "outputs": 6,
        "noerr": 0,
        "x": 520,
        "y": 100,
        "wires": [["manipulador_chart_erro"], ["manipulador_gauge_erro"], ["manipulador_gauge_tempo"], ["manipulador_gauge_energia"], ["manipulador_gauge_overshoot"], ["manipulador_text_status"]]
    },
