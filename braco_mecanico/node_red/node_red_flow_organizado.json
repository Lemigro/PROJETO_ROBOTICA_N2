        "type": "function",
        "z": "robo_flow",
        "name": "Preparar Dashboard",
        "func": "const metrics = msg.payload.metrics;\nconst timestamp = new Date(msg.payload.timestamp * 1000);\n\n// Preparar dados para gráfico de distância\nconst msgDist = {payload: metrics.distancia_percorrida_sem_impacto, topic: \"distancia\"};\n\n// Criar mensagens para os displays\nreturn [\n    msgDist,\n    {payload: metrics.numero_colisoes, topic: \"colisoes\"},\n    {payload: metrics.tempo_reacao_medio || 0, topic: \"tempo_reacao\"},\n    {payload: metrics.distancia_percorrida_sem_impacto, topic: \"distancia\"},\n    {payload: metrics.erro_medio_lateral, topic: \"erro_lateral\"}\n];",
        "outputs": 5,
        "noerr": 0,
